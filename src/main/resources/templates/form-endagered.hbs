{{#partial "content"}}
    <div class="full">
        <div class="card mt-3 bg-success border-warning  mx-auto p-2" style="width: 40rem;">
            <h2 class="text-center">ADD AN ENDANGERED SPECIE ANIMAL</h2>
            <form action="/post/new/animal" method="post">
                <div class="form-group">
                    <label for="name">Animal Name</label>
                    <input type="text" class="form-control" name="name" id="name" required>
                </div>
                <div class="form-group">
                    <label for="age">Animal Age</label>
                    <select class="form-control" name="age" required>
                        <option value="newborn">New born</option>
                        <option value="Young">Young</option>
                        <option value="adult">Adult</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="age">Animal Health</label>
                    <select class="form-control" name="health" required>
                        <option value="healthy">Healthy</option>
                        <option value="ill">Ill</option>
                        <option value="okay">Okay</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-info m-2">Submit</button>
            </form>
        </div>
    </div>
{{/partial}}{{>layout.hbs}}