{{#partial "content"}}
    <div class="full">
        <div class="card mt-3 bg-success border-warning  mx-auto p-2" style="width: 40rem;">
            <h2 class="text-center">ADD A NEW LOCATION</h2>
            <form action="/post/new/location" method="post">
                <div class="form-group">
                    <label for="name">Location Name</label>
                    <input type="text" class="form-control" name="location" id="location" required>
                </div>
                <button type="submit" class="btn btn-info m-2">Submit</button>
            </form>
        </div>
    </div>
{{/partial}}{{>layout.hbs}}