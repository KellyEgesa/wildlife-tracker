{{#partial "content"}}
    <div class="full">
        <div class="card mt-3 bg-success border-warning  mx-auto p-2" style="width: 40rem;">
            <h2 class="text-center">ADD A NEW SIGHTING</h2>
            <form action="/post/new/sighting" method="post" >
                <div class="form-group">
                    <label for="name">Animal Name</label>
                    <select class="form-control" name="animalId" required>
                        {{#each animals}}
                            <option value={{id}} >{{name}} {{type}}</option>
                        {{/each}}
                    </select>
                    <a href="/add/animals">Add a new Animal</a>
                </div>
                <div class="form-group">
                    <label for="name">Location</label>
                    <select class="form-control" name="locationId" required>
                        {{#each locations}}
                            <option value={{id}} >{{name}}</option>
                        {{/each}}
                    </select>
                    <a href="/add/location">Add a new Location</a>
                </div>
                <div class="form-group">
                    <label for="name">Ranger</label>
                    <select class="form-control" name="rangerId" required>
                        {{#each rangers}}
                            <option value={{id}} >{{name}}</option>
                        {{/each}}
                    </select>
                    <a href="/add/ranger">Add a new Ranger</a>
                </div>
                <button type="submit" class="btn btn-info m-2">Submit</button>
            </form>
        </div>
    </div>
{{/partial}}{{>layout.hbs}}